<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Management</title>
    <link rel="stylesheet" href="/css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="/css/admin_layout.css" type="text/css">

</head>
<body>
    <div class="container">
        {{> headerAdmin}}

        <!-- Content -->
        <div class="main_Content">
            <div class="top_content">
                <div class="table_title">
                    <h2>Add new Account</h2>
                </div>

                <table>
                    <form  action="../admin/doAddAccount" method="post">
                        <tr>
                            <td class="accountManagement_title">Name : </td>
                            <td><input type="text" class="accountManagement" name="txtStaffName"> </td> 
                            <td style="color: brown;">{{errorName}}</td>
                        </tr>
                        <tr>
                            <td class="accountManagement_title">Email : </td>
                            <td><input type="text" class="accountManagement" name="txtStaffEmail"> </td> 
                            <td style="color: brown;">{{errorEmail}}</td>
                        </tr>

                        <tr>
                            <td class="accountManagement_title">Password : </td>
                            <td><input type="text" class="accountManagement" name="txtStaffPassword"> </td> 
                            <td style="color: brown;">{{errorPassword}}</td>
                        </tr>

                        <tr>
                            <td class="accountManagement_title">Age : </td>
                            <td><input type="text" class="accountManagement" name="txtStaffAge"></td>
                            <td  style="color: brown;">{{errorAge}}</td>

                        </tr>
                        
                        <tr>
                            <td class="accountManagement_title">PhoneNumber : </td>
                            <td><input type="text" class="accountManagement" name="txtStaffEducation"></td>
                            <td  style="color: brown;">{{errorMessage}}</td>

                        </tr>

                        <tr>
                            <td class="accountManagement_title">Role : </td>
                            <td>
                                <div class="dropbox">
                                        <select name="txtRoleSelected">
                                            <option value="selectedQAManager">Quality Assurance Manager</option>
                                            <option value="selectedQACoordinator">Quality Assurance Coordinator</option>
                                            <option value="selectedStaff">Staff</option>

                                        </select>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="submit" value="Insert" class="insertButton"></td>

                        </tr>
                    </form>
                </table>

                <div class="line_only"></div>
            </div>

            <div class="bottom_content">

            </div>
        </div>

        <!-- (End) Content -->

        {{> footer}}
    </div>


</body>
</html>