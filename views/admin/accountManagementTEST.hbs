<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Management</title>
    <link rel="stylesheet" href="/css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="/css/admin_layout.css" type="text/css">

</head>
<body>
    <div class="container">
        {{> headerAdmin}}

        <!-- Content -->
        <div class="main_Content">
            <!-- Top Content -->
            <div class="top_content">
                
                <div class="center_option">
                    <div class="dropbox_show">
                        <form  action="../admin/showRoleAccountTEST" method="post">
                            <select name="txtRoleSelected_toShow" onchange="this.form.submit()">
                                <option value="">Select</option>

                                <option value="Staff">Staff</option>

                                <option value="Quality Assurance Manager">Quality Assurance Manager </option>

                                <option value="Quality Assurance Coordinator">Quality Assurance Coordinator</option>

                            </select>
                        </form>
                    </div>

                </div>
                <div class="line_only"></div>
            </div>

            

            <div class="bottom_content">
                <!-- Bottom Content -->
                <table border="1" cellspacing ="0 " cellpadding="15">
                        <thead>
                            <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Age</th>
                                    <th>PhoneNumber</th>
                                    <th>Role</th>
                                    <th>Delete</th>
                                    <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each viewAllAccount}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{email}}</td>
                                    <td>{{age}}</td>
                                    <td>{{phoneNumber}}</td>
                                    <td>{{role}}</td>

                                    <td>
                                        <button>
                                            <a href="../admin/deleteAccount?id={{_id}}" 
                                            onclick="return confirm('Are You Sure to Delete ?')">
                                                <img src="https://icon-library.com/images/red-recycle-bin-icon/red-recycle-bin-icon-18.jpg"
                                                    width="18" height="18">
                                                    Delete
                                            </a>
                                        </button>
                                    </td>

                                    <td>
                                            <button>
                                                <a href="../admin/updateAccount?id={{_id}}">
                                                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/64/Edit_icon_%28the_Noun_Project_30184%29.svg/1024px-Edit_icon_%28the_Noun_Project_30184%29.svg.png"
                                                    width="18" height="18" alt="">
                                                    Update
                                                </a>
                                        </button>
                                    </td>
                                
                                </tr>
                            {{/each }}
                    </tbody>
                </table>
            </div>

            {{#if isStaffRole}}
                <div class="center_option_testPaging">
                    <div class="choosePageFirst">
                        <a href="../admin/choosePageUserTEST?skipData=0&currRole=Staff">
                            <button>
                                <<
                            </button>
                        </a>
                    </div>

                    <div class="choosePage">
                        <div class="choosePage_inside">
                            {{#each viewNumPage as |val key|}}
                                <a href="../admin/choosePageUserTEST?skipData={{key}}&currRole=Staff">
                                    <button>
                                            {{val}}
                                    </button>
                                </a>
                            {{/each}}
                        </div>
                    </div>

                    <div class="choosePageLast">
                        <a href="../admin/choosePageUserTEST?skipData={{lastPage}}&currRole=Staff">
                            <button>
                                >>
                            </button>
                        </a>
                    </div>
                </div>
            {{/if}}


            {{#if isManagerRole}}
                <div class="center_option_testPaging">
                    <div class="choosePageFirst">
                        <a href="../admin/choosePageUserTEST?skipData=0&currRole=Quality Assurance Manager">
                            <button>
                                <<
                            </button>
                        </a>
                    </div>

                    <div class="choosePage">
                        <div class="choosePage_inside">
                            {{#each viewNumPage as |val key|}}
                                <a href="../admin/choosePageUserTEST?skipData={{key}}&currRole=Quality Assurance Manager">
                                    <button>
                                            {{val}}
                                    </button>
                                </a>
                            {{/each}}
                        </div>
                    </div>

                    <div class="choosePageLast">
                        <a href="../admin/choosePageUserTEST?skipData={{lastPage}}&currRole=Quality Assurance Manager">
                            <button>
                                >>
                            </button>
                        </a>
                    </div>
                </div>
            {{/if}}


            {{#if isCorrRole}}
                <div class="center_option_testPaging">
                    <div class="choosePageFirst">
                        <a href="../admin/choosePageUserTEST?skipData=0&currRole=Quality Assurance Coordinator">
                            <button>
                                <<
                            </button>
                        </a>
                    </div>

                    <div class="choosePage">
                        <div class="choosePage_inside">
                                {{#each viewNumPage as |val key|}}
                                    <a href="../admin/choosePageUserTEST?skipData={{key}}&currRole=Quality Assurance Coordinator">
                                        <button>
                                                {{val}}
                                        </button>
                                    </a>
                                {{/each}}

                        </div>
                    </div>

                    <div class="choosePageLast">
                        <a href="../admin/choosePageUserTEST?skipData={{lastPage}}&currRole=Quality Assurance Coordinator">
                            <button>
                                >>
                            </button>
                        </a>
                    </div>
                </div>
            {{/if}}

        </div>

        <!-- (End) Content -->

        {{> footer}}
    </div>


</body>
</html>

<script type="text/javascript">
        
</script>  

