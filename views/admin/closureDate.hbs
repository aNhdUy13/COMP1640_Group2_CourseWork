<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closure Date</title>
    <link rel="stylesheet" href="/css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="/css/admin_layout.css" type="text/css">

</head>
<body>
    <div class="container">
        {{> headerAdmin}}

        <!-- Content -->
        <div class="main_Content">
            <div class="top_content">
                    <div class="table_title">
                        <h2>Set Closure Date</h2>
                    </div>

                    <table>
                        <form  action="../admin/doSetDate" method="post">
                            <tr>
                                <td>Name : </td>
                                <td>
                                    <input type="text" name="txtName"> 
                                </td> 
                                <td style="color: brown;">{{errorMessage}}</td>
                            </tr>

                            <tr>
                                <td>Start Date : </td>
                                <td>
                                    <input type="date" name="txtStartDate"> 
                                </td> 
                                <td style="color: brown;">{{errorMessage}}</td>
                            </tr>
                            <tr>
                                <td>End Date : </td>
                                <td>
                                    <input type="date" name="txtEndDate">
                                </td>
                                <td  style="color: brown;">{{errorMessage}}</td>

                            </tr>

                            <tr>
                                <td></td>
                                <td><input type="submit" value="Add" class="insertButton"></td>
                            </tr>
                            <td style="width:40%; font-size:12px; color: rgb(32, 193, 59); ">{{message}}</td>

                        </form>
                    </table>

                <div class="line_only"></div>
            </div>
    
    <div class="bottom_content_closureDate">
                <!-- Bottom Content -->
                <table border="1" cellspacing ="0 " cellpadding="15">
                        <thead>
                            <tr>
                                    <th>Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each viewAllClosureDate}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{startDate}}</td>
                                    <td>{{endDate}}</td>
                                    <td>
                                            <button>
                                                <a href="../admin/updateClosureDate?id={{_id}}">
                                                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/64/Edit_icon_%28the_Noun_Project_30184%29.svg/1024px-Edit_icon_%28the_Noun_Project_30184%29.svg.png"
                                                    width="18" height="18" alt="">
                                                    Update
                                                </a>
                                        </button>
                                    </td>
                                
                                </tr>
                            {{/each }}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- (End) Content -->

        {{> footer}}
    </div>


</body>
</html>