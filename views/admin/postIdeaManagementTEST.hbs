<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Management</title>
    <link rel="stylesheet" href="/css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="/css/admin_layout.css" type="text/css">

</head>
<body>
    <div class="container">
        {{> headerAdmin}}

        <!-- Content -->
        <div class="main_Content">
            <div class="table_title_idea">
                <h2>Post Idea Management</h2>
            </div>
{{!-- 
            <div class="show_closureDate">
                    <p>( Start Date : {{startDate}} )</p>
                    <p>( End Date : {{endDate}} )</p>
            </div> --}}

            <div class="ideaManagement">
                <table border="1" cellspacing ="0 " cellpadding="15">
                        <thead>
                            <tr>
                                    <th>Topic</th>
                                    <th>Description</th>
                                    <th>Categories</th>
                                    <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each viewAllDataInTable}}
                                <tr>
                                    <td>{{topic}}</td>
                                    <td>{{description}}</td>
                                    <td>{{category}}</td>
                                    <td>{{email}}</td>
                                </tr>
                            {{/each }}
                    </tbody>
                </table>
            </div>

            <div class="showButtonPaging">
                    
                    <a href="../admin/TESTpostIdeaManagement" style="margin-left:10px">
                        <button>
                            <<
                        </button>
                    </a>
            

                    {{#each left}}
                        <a href="/admin/TESTpostIdeaManagement?currPage={{this}}">
                            <button>
                                {{this}}
                            </button>
                        </a>
                    {{/each}}


                    <a href="/admin/TESTpostIdeaManagement?currPage={{currPage}}">
                        <button class="active">
                            {{currPage}}
                        </button>
                    </a>


                    {{#each right}}
                        <a href="/admin/TESTpostIdeaManagement?currPage={{this}}">
                            <button>
                                {{this}}
                            </button>
                        </a>
                    {{/each}}

                    
                    <a href="/admin/TESTpostIdeaManagement?currPage={{totalPages}}">
                        <button>
                            >>
                        </button>
                    </a> 
            </div>
        </div>

        <!-- (End) Content -->

        {{> footer}}
    </div>


</body>
</html>